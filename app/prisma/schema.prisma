// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  passwordHash      String
  name              String?
  phone             String?
  role              String    @default("USER")
  isAnonymousPref   Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastLoginAt       DateTime?
  
  ratings           Rating[]
  reports           Report[]
  trips             Trip[]
  moderatedReports  Report[]  @relation("ModeratedBy")
  
  @@index([email])
}

model Sacco {
  id          String    @id @default(cuid())
  name        String    @unique
  contact     String?
  email       String?
  address     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  vehicles    Vehicle[]
  
  @@index([name])
}

model Driver {
  id          String    @id @default(cuid())
  name        String
  phone       String?
  licenseNo   String?   @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  vehicles    Vehicle[]
  
  @@index([licenseNo])
}

model Conductor {
  id          String    @id @default(cuid())
  name        String
  phone       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  vehicles    Vehicle[]
}

model Vehicle {
  id                String    @id @default(cuid())
  saccoId           String
  registrationPlate String    @unique
  driverId          String?
  conductorId       String?
  photoUrl          String?
  route             String
  capacity          Int       @default(14)
  
  // Computed fields
  avgRating         Float     @default(0)
  ratingCount       Int       @default(0)
  safetyScore       Float     @default(0)
  cleanlinessScore  Float     @default(0)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  sacco             Sacco     @relation(fields: [saccoId], references: [id], onDelete: Cascade)
  driver            Driver?   @relation(fields: [driverId], references: [id], onDelete: SetNull)
  conductor         Conductor? @relation(fields: [conductorId], references: [id], onDelete: SetNull)
  
  ratings           Rating[]
  reports           Report[]
  trips             Trip[]
  
  @@index([saccoId])
  @@index([registrationPlate])
  @@index([route])
  @@index([avgRating])
}

model Rating {
  id                String    @id @default(cuid())
  userId            String
  vehicleId         String
  tripId            String?   @unique
  
  score             Float     // Overall score 1-5
  safetyScore       Float     // 1-5
  cleanlinessScore  Float     // 1-5
  comfortScore      Float?    // 1-5
  punctualityScore  Float?    // 1-5
  
  comments          String?
  isAnonymous       Boolean   @default(false)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle           Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  trip              Trip?     @relation(fields: [tripId], references: [id])
  
  @@unique([userId, vehicleId, createdAt])
  @@index([vehicleId])
  @@index([userId])
  @@index([createdAt])
}

model Report {
  id            String         @id @default(cuid())
  userId        String?        // Nullable for anonymous reports
  vehicleId     String
  tripId        String?
  
  category      String
  description   String
  photoUrl      String?
  
  status        String         @default("PENDING")
  moderatedBy   String?
  moderatorNotes String?
  moderatedAt   DateTime?
  
  isAnonymous   Boolean        @default(false)
  
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  user          User?          @relation(fields: [userId], references: [id], onDelete: SetNull)
  vehicle       Vehicle        @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  trip          Trip?          @relation(fields: [tripId], references: [id])
  moderator     User?          @relation("ModeratedBy", fields: [moderatedBy], references: [id])
  
  @@index([vehicleId])
  @@index([userId])
  @@index([status])
  @@index([category])
  @@index([createdAt])
}

model Trip {
  id          String    @id @default(cuid())
  userId      String
  vehicleId   String
  
  seatNo      String?   // e.g., "12" or "Front Left"
  destination String
  
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle     Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  rating      Rating?
  reports     Report[]
  
  @@index([userId])
  @@index([vehicleId])
  @@index([startedAt])
}